<div class="bookclub_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
    <fieldset>
      <legend>请登录</legend>

      <div>
        <label for="webid">web id</label>

        <%= text_field_tag :webid, params[:webid] %>
      </div>

      <div>
        <label for="password">密码</label>
        <%= password_field_tag :password, params[:password] %>
        <%= link_to '忘记密码了?', find_password_path %><br />
      </div>

      <div>
        <label></label>
      </div>
  
      <div>
        <%= submit_tag "登录" %>
      </div>

    </fieldset>
  <% end %>
</div>
