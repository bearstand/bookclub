<div class="bookclub_form">

<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %>导致保存失败：</h2>
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  <legend>输入图书详细信息</legend>

  <div class="field">
    <label>书名</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label>ISBN</label>
    <%= f.text_field :isbn %>
  </div>

  <div class="field">
    <label>类型</label>
    <% if @category %>
    <% cate_id = @category.id %>
    <% end %>
    <%= select_tag "book_category",
        options_from_collection_for_select(@category_options,
        "id", "name", cate_id) %>
  </div>

  <div class="field">
    <label>语言</label>
    <%= f.select :language, Book::LANGUAGE_TYPES %>
  </div>

  <div class="field">
    <label>价格</label>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <label>链接</label>
    <%= f.text_field :web_url %>
  </div>

  <div class="field">
    <label>描述</label>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit %>
  </div>

  </fieldset>
<% end %>

</div>
